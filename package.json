{
  "name": "serviflow-support-platform",
  "version": "1.0.0",
  "description": "ServiFlow Support Platform with Multi-Tenant MySQL Backend",
  "main": "entry.js",
  "scripts": {
    "start": "node entry.js",
    "start:main": "node server.js",
    "start:teams": "node teams-connector/server.js",
    "start:email-worker": "node email-worker.js",
    "start:sla-worker": "node sla-worker.js",
    "start-simple": "node server-simple.js",
    "dev": "node server.js",
    "migrate": "RUN_MIGRATIONS=true node server.js",
    "setup-db": "node scripts/setup-database.js",
    "setup-email": "node setup-email.js",
    "lint": "eslint --no-eslintrc -c .eslintrc.json *.js services/*.js routes/*.js config/*.js scripts/*.js --ignore-pattern node_modules",
    "lint:html": "eslint --no-eslintrc -c .eslintrc.json 'A1 Support Build from here .html'",
    "lint:all": "npm run lint && npm run lint:html",
    "smoke": "node scripts/smoke-test.js",
    "smoke:uat": "node scripts/smoke-test.js https://web-uat-uat.up.railway.app",
    "smoke:prod": "node scripts/smoke-test.js https://app.serviflow.app",
    "smoke:uat-parity": "node scripts/smoke-uat-parity.js uat",
    "smoke:uat-full": "node scripts/smoke-test.js https://web-uat-uat.up.railway.app && node scripts/smoke-uat-parity.js uat",
    "smoke:prod-parity": "node scripts/smoke-uat-parity.js prod",
    "test": "node --test tests/",
    "precommit": "npm run lint",
    "cap:init": "npx cap init ServiFlow com.serviflow.app --web-dir .",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:run:ios": "npx cap run ios",
    "cap:run:android": "npx cap run android",
    "mobile:setup": "npm run cap:add:ios && npm run cap:add:android && npm run cap:sync",
    "mobile:ios": "npm run cap:sync && npm run cap:open:ios",
    "mobile:android": "npm run cap:sync && npm run cap:open:android",
    "backfill:classify:pool": "node scripts/backfill-ticket-classification.js --mode pool",
    "backfill:classify:all": "node scripts/backfill-ticket-classification.js --mode all",
    "gate:schema": "node scripts/parity/check-schema-parity.js",
    "gate:diff": "node scripts/parity/gate-runner.js",
    "gate:smoke": "node scripts/parity/gate-runner.js --smoke",
    "gate:uat": "node scripts/parity/gate-runner.js --all"
  },
  "keywords": [
    "support",
    "dashboard",
    "prototype",
    "ticket-management",
    "cmdb",
    "multi-tenant",
    "mysql"
  ],
  "author": "ServiFlow Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@ionic/core": "^8.7.14",
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^6.11.2",
    "bcrypt": "^5.1.1",
    "botbuilder": "^4.23.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "imapflow": "^1.2.10",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.5",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.10",
    "socket.io": "^4.8.3",
    "stripe": "^20.1.2",
    "twilio": "^5.12.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "bcryptjs": "^3.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-html": "^8.1.4",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  }
}
