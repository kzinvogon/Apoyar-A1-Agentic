# A1 Support Dashboard Configuration
# Copy this file to .env and fill in your actual values

PORT=3000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Generate a strong random secret for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
JWT_EXPIRES_IN=24h

# Master Database Configuration
MASTER_DB_HOST=localhost
MASTER_DB_PORT=3306
MASTER_DB_USER=root
MASTER_DB_PASSWORD=your_database_password
MASTER_DB_NAME=a1_master

# Default tenant for development
DEFAULT_TENANT=apoyar

# Email Configuration (Nodemailer/Gmail)
# To use Gmail, you need to generate an App Password:
# 1. Enable 2-factor authentication on your Google account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate an app password for "Mail"
# 4. Use that password here (not your regular Gmail password)
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# Default Passwords for Development
# WARNING: Change these immediately in production!
# These are used when creating default admin users during setup
DEFAULT_MASTER_PASSWORD=change_this_master_admin_password
DEFAULT_TENANT_PASSWORD=change_this_tenant_user_password
